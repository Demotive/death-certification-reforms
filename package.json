{
  "name": "barebones",
  "version": "1.0.0",
  "description": "A very minimal node / express / frontend_toolkit / elements pack for prototyping admin tools",
  "main": "server.js",
  "dependencies": {
    "basic-auth": "^2.0.0",
    "express": "^4.16.2",
    "fs": "0.0.1-security",
    "govuk-elements-sass": "^3.1.2",
    "govuk_frontend_toolkit": "^7.2.0",
    "node-sass": "^4.6.1",
    "nunjucks": "^3.0.1",
    "path": "^0.12.7",
    "portscanner": "^2.1.1",
    "prompt": "^1.0.0",
    "uglify-js": "^3.1.9"
  },
  "devDependencies": {
    "nodemon": "^1.12.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/department-of-health/barebones.git"
  },
  "author": "demotive",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/department-of-health/barebones/issues"
  },
  "homepage": "https://github.com/department-of-health/barebones#readme",
  "scripts": {
    "build-css": "node-sass --include-path node_modules/govuk_frontend_toolkit/stylesheets --include-path node_modules/govuk-elements-sass/public/sass app/assets/scss/main.scss public/css/main.css",
    "build-js": "uglifyjs app/assets/js/*.js -c -o public/js/main.js",
    "copy-images": "cp -rf app/assets/images public",
    "watch-js": "nodemon -e js --watch app/assets/js -x \"npm run build-js\"",
    "watch-scss": "nodemon -e scss --watch app/assets/scss -x \"npm run build-css\"",
    "watch-images": "nodemon -e png --watch app/assets/images -x \"npm run copy-images\"",
    "watch": "npm run watch-images & npm run watch-js & npm run watch-scss & nodemon server.js",
    "build": "npm run copy-images & npm run build-js & npm run build-css"
  }
}
